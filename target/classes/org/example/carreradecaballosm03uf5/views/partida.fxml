<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@../styles/partida-view.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.carreradecaballosm03uf5.controllers.PartidaController">
    <!-- Fondo con StackPane -->
    <StackPane>
        <ImageView preserveRatio="true" opacity="0.5">
            <image>
                <Image url="@../../../../images/background.jpg" />
            </image>
        </ImageView>

        <!-- Contenido principal -->
        <VBox alignment="CENTER" spacing="20">
            <!-- Etiqueta principal -->
            <Label fx:id="textoPartida" text="Partida Recuperada" styleClass="textoPartida" textFill="WHITE" />

            <!-- Opciones de continuar o salir -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="continuarButton" text="Continuar" onAction="#onContinuarButtonClick" textFill="WHITE" />
                <Button fx:id="salirButton" text="Salir" onAction="#onSalirButtonClick" textFill="WHITE" />
            </HBox>
        </VBox>
    </StackPane>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
